{% extends 'base.html.twig' %}

{% block title %}Hello SalleController!{% endblock %}

{% block body %}




        <div id="Salle">


    {% for Lieu in Lieux %}

            <div id="encadreSalle">

                <div class="afficheSalle">
                    <div class="carteSalle">

                        <img src="{{ asset("image_sae301/#{Lieu.affiche}") }}">



                    </div>
                    <div class="carteBasSalle">
                        <p class="p1"> {{ Lieu.lieuNom }}</p>
                        <p class="p2"> <i class="fa-solid fa-location-dot"></i>{{ Lieu.lieuAdrRue }}</p>

                        <p class="p3"> <i class="fa-solid fa-users-viewfinder"></i></i>  {{ Lieu.lieuCapacite }}</p>
                        <div class="1star"><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-regular fa-star"></i><i class="fa-regular fa-star"></i></div>


                    </div>
                </div>








            </div>
        </div>





        </div>

        <style>
            @import url('https://fonts.googleapis.com/css2?family=Nerko+One&display=swap');
            @import url('https://fonts.googleapis.com/css2?family=Fjalla+One&display=swap');
            #accueil{
                width:100vw;
                height: fit-content;
                display: flex;
                justify-content: center;
            }
            #Salle{
                display: flex;
                width: 100vw;
                height: fit-content;
                flex-wrap: wrap;
                justify-content: left;
            }
            #Salle h1{

                margin-top: 50px;
                margin-left: 15.5vw;
                font-size: 30px;
                font-family: "Fjalla One";

            }
            #encadreSalle{
                display: flex;
                width: 100vw;
                flex-wrap: wrap;
                justify-content: center;
                height: fit-content;
                margin-bottom: 2rem;
            }






            .carteSalle img{
                box-shadow: 2px 2px 2px 2px rgb(184, 184, 184);
                width:15vw;
                height: 40vh;
                display: flex;
                align-items: center;
                justify-content: center;
                background-size: cover;
                border-radius: 8px 8px 0px 0px;
                background-color: rgb(145, 68, 68);
                width: 100%;
            }
            .fa-calendar-days{
                color: rgb(75, 73, 74);

            }
            .fa-location-dot{
                color: rgb(75, 73, 74);
            }


            .afficheSalle{
                display: flex;
                flex-direction: column;
                flex-wrap: wrap;
                margin: 10px 20px;

            }
            .carteSalle {
                width: 25rem;
            }
            .carteSalle > img{
                width: 100%;
            }
            .carteBasSalle{
                background-color: rgb(255, 255, 255);
                border-radius: 0px 0px 8px 8px;
                box-shadow: 2px 2px 2px 2px rgb(184, 184, 184);
                width: 25rem;
                height: 12rem;
                display: flex;
                flex-direction: column;
                justify-content: space-between;
            }
            .carteBasSalle p{

                margin-left: 5px;
                height: 2vh;



            }
            .fa-star{
                color: crimson;
                margin-bottom: 5px;
            }


            .p1{
                color: rgb(0, 0, 0);
                font-size: 20px;
                font-weight: bolder;
                font-family: "Fjalla One";
            }
            .p2{
                color: rgb(0, 0, 0);

                font-family: "Fjalla One";
            }
            .p3{
                color: rgb(0, 0, 0);
                font-family: "Fjalla One";
            }
            .p4{
                color: rgb(0, 0, 0);
                font-family: "Fjalla One";
            }
        </style>
    {% endfor %}

{% endblock %}
